@model List<CarRental.Models.Customer>

<div class="container mt-5 text-white">
    <h2>Customer List</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Licence No</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.Name</td>
                        <td>@customer.Email</td>
                        <td>@customer.PhoneNumber</td>
                        <td>@customer.LicenceNumber</td>
                        <td>@customer.Address</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Customer" asp-action="Update" asp-route-id="@customer.Id">Edit</a>
                            <a class="btn btn-danger" asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No customers found.</p>
    }
</div>

