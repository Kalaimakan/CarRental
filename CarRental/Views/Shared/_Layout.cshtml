<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Car3DModel</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">  *@ 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-y..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .navbar {
            background-color: rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(15px);
            transition: background-color 0.3s ease;
        }

            .navbar.scrolled {
                background-color: rgba(0, 0, 0, 0.7) !important;
            }

        .navbar-brand,
        .nav-link {
            color: white !important;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.8);
        }

        .navbar-toggler {
            border-color: rgba(255,255,255,0.5);
        }

        .nav-underline .nav-link {
            border-bottom: none !important;
            position: relative;
            padding-bottom: 10px;
            margin: 0 14px;
            transition: all 0.3s ease;
        }

            .nav-underline .nav-link::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                width: 0;
                height: 2px;
                background-color: red;
                transition: all 0.7s cubic-bezier(0.68, -0.55, 0.265, 1.55);
                transform: translateX(-50%);
                opacity: 0;
            }

            .nav-underline .nav-link:hover::after,
            .nav-underline .nav-link.active::after {
                width: 100%;
                opacity: 1;
            }

            .nav-underline .nav-link:hover {
                transition:1s;
                transform: scale(1.24);
            }

        .navbar a i {
            padding-top: 20px;
            padding-left: 7px;
            font-size: 25px;
            color: white;
            transition: transform 0.9s ease, color 0.6s ease;
            transform-style: preserve-3d;
        }

        .navbar a:hover i {
            color: red;
            transform: scale(1.24);
        }
    </style>

</head>
<body>
    <header>
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg fs-6 fixed-top">
            <div class="container-fluid ">
                <h1 class="navbar-brand fs-3 mt-1">Car3DModel</h1>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarContent">
                    <ul class="navbar-nav nav-underline">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                        </li>
                    </ul>
                </div>
                <div class="d-flex gap-3">
                    <a href="https://www.youtube.com/nationalcarrental" target="_blank" class="text-white">
                        <i class="fab fa-youtube fa-lg"></i>
                    </a>
                    <a href="https://www.instagram.com/nationalcarrental/?hl=en" target="_blank" class="text-white">
                        <i class="fab fa-instagram fa-lg"></i>
                    </a>
                    <a href="https://www.facebook.com/NationalCarRental/" target="_blank" class="text-white">
                        <i class="fab fa-facebook fa-lg"></i>
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        @RenderBody()
    </div>
    <script>
                window.addEventListener("scroll", function () {
            const navbar = document.querySelector(".navbar");
            if (window.scrollY > 50) {
                navbar.classList.add("scrolled");
            } else {
                navbar.classList.remove("scrolled");
            }
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>