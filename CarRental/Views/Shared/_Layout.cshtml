<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Car3DModel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar {
            background-color: rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(15px); 
            transition: background-color 0.3s ease;
        }

            .navbar.scrolled {
                background-color: rgba(0, 0, 0, 0.7) !important;
            }

        .navbar-brand,
        .nav-link {
            color: white !important;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.8);
        }

        .navbar-toggler {
            border-color: rgba(255,255,255,0.5);
        }

        .nav-underline .nav-link {
            border-bottom: none !important;
            position: relative;
            padding-bottom: 5px;
            margin: 0 10px;
            transition: all 0.3s ease;
        }

            .nav-underline .nav-link::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                width: 0;
                height: 3px;
                background-color: red;
                transition: all 0.7s cubic-bezier(0.68, -0.55, 0.265, 1.55);
                transform: translateX(-50%);
                opacity: 0;
            }

            .nav-underline .nav-link:hover::after,
            .nav-underline .nav-link.active::after {
                width: 100%;
                opacity: 1;

            }

            .nav-underline .nav-link.active::after {
                height: 4px;
                border: 2px solid blue !important;
                box-shadow: 0 0 2px 0.1rem blue;
            }

            .nav-underline .nav-link:hover {
                transform: translateY(-2px);
            }

        .btn-outline-light:hover {
            color:white !important;
            background-color: black !important;
            border-color: red !important;
            border: 1px solid red;
            border-radius:20px;
            box-shadow: 0 0 2px 0.1rem red;
            transition:0.8s;
            transform: translateY(-2px);
        }

        .btn-outline-light:focus,
        .btn-outline-light:active {
            border: 1px solid blue !important;
            box-shadow: 0 0 2px 0.1rem blue;
        }
    </style>

</head>
<body>
    <header>
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg fs-6 fixed-top">
            <div class="container-fluid ">
                <h1 class="navbar-brand fs-3 mt-1">Car3DModel</h1>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarContent">
                    <ul class="navbar-nav nav-underline">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                    </ul>
                </div>
                <div>
                    <a class="btn btn-outline-light" asp-controller="Home" asp-action="Login">Login</a>
                    <a class="btn btn-outline-light mx-2" asp-controller="Home" asp-action="Register">Register</a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>