@model List<CarRental.Models.Car>

<body class="bg-danger">
    <h2>
        @if (TempData["Success"] != null)
        {
            <div class="toast-container position-fixed start-50 translate-middle-x p-3" style="z-index: 11; top: 50px;">
                <div class="toast show align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true" style="min-width: 350px">
                    <div class="d-flex">
                        <div class="toast-body text-center w-100">
                            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }
    </h2>

    <div class="container mt-3 mt-md-5 text-white">
        <div class="card shadow-lg rounded-4 border-0">
            <div class="card-header bg-danger text-white rounded-top-4 d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Car List</h3>
                <a class="btn btn-light btn-sm shadow-sm ms-auto" asp-controller="Car" asp-action="Add">+ Add Car</a>
            </div>

            <div class="card-body p-0">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-dark table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>Brand</th>
                                    <th>Model</th>
                                    <th class="d-none d-md-table-cell">Colour</th>
                                    <th>Price/Day</th>
                                    <th class="d-none d-sm-table-cell">Status</th>
                                    <th class="d-none d-lg-table-cell">Description</th>
                                    <th class="d-none d-sm-table-cell">Images</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var car in Model)
                                {
                                    <tr>
                                        <td>@car.CarBrand</td>
                                        <td>@car.CarModel</td>
                                        <td class="d-none d-md-table-cell">@car.CarColour</td>
                                        <td>Rs. @car.PricePerDay</td>
                                        <td class="d-none d-sm-table-cell">@(car.Status ? "Available" : "Not Available")</td>
                                        <td class="d-none d-lg-table-cell text-truncate" style="max-width: 200px;">@car.Description</td>
                                        <td class="d-none d-sm-table-cell">
                                            @if (car.Images != null && car.Images.Any())
                                            {
                                                foreach (var image in car.Images.Take(2))
                                                {
                                                    <img src="~/images/@image.FileName" width="60" height="40" class="me-1 mb-1 rounded shadow-sm img-fluid" />
                                                }
                                                @if (car.Images.Count > 2)
                                                {
                                                    <span class="text-info">+@((car.Images.Count) - 2)</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">No Images</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex flex-wrap gap-2">
                                                <a class="btn btn-outline-warning btn-sm d-flex align-items-center px-3 py-2 rounded-pill"
                                                   asp-action="Update"
                                                   asp-route-id="@car.Id"
                                                   title="Edit"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-placement="top">
                                                    <i class="fas fa-pencil-alt me-2"></i>
                                                    <span class="small fw-medium">Edit</span>
                                                </a>

                                                <a class="btn btn-outline-danger btn-sm d-flex align-items-center px-3 py-2 rounded-pill"
                                                   asp-action="Delete"
                                                   asp-route-id="@car.Id"
                                                   onclick="return confirm('Are you sure you want to delete this car?');"
                                                   title="Delete"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-placement="top">
                                                    <i class="fas fa-trash-alt me-2"></i>
                                                    <span class="small fw-medium">Delete</span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center text-dark">
                        <p>No cars found.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</body>