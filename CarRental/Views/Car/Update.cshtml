@model CarRental.ViewModels.CarViewModel
@{
    ViewData["Title"] = "Edit Car";
}

<h2 class="text-center mb-4">✏️ Edit Car</h2>

<form method="post" enctype="multipart/form-data" class="p-4 rounded shadow" style="background-color: #1e1e2f; color: white; max-width: 650px; margin: auto;">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="CarBrand" class="form-label">Brand</label>
        <input asp-for="CarBrand" class="form-control bg-dark text-white" />
        <span asp-validation-for="CarBrand" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CarModel" class="form-label">Model</label>
        <input asp-for="CarModel" class="form-control bg-dark text-white" />
        <span asp-validation-for="CarModel" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CarColour" class="form-label">Colour</label>
        <input asp-for="CarColour" class="form-control bg-dark text-white" />
    </div>

    <div class="mb-3">
        <label asp-for="PricePerDay" class="form-label">Price Per Day</label>
        <input asp-for="PricePerDay" class="form-control bg-dark text-white" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>

    <div class="form-check form-switch mb-3">
        <input asp-for="Status" class="form-check-input" />
        <label asp-for="Status" class="form-check-label">Available</label>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control bg-dark text-white"></textarea>
    </div>

    @if (Model.ExistingImages != null && Model.ExistingImages.Count > 0)
    {
        <label class="form-label">Existing Images:</label>
        <div class="d-flex flex-wrap gap-2 mb-3">
            @foreach (var img in Model.ExistingImages)
            {
                <img src="~/images/@img.FileName" style="width: 100px; height: 70px; object-fit: cover; border-radius: 5px;" />
            }
        </div>
    }

    <div class="mb-3">
        <label asp-for="ImageFiles" class="form-label">Upload More Images</label>
        <input asp-for="ImageFiles" type="file" class="form-control bg-dark text-white" multiple />
    </div>

    <button type="submit" class="btn btn-outline-light w-100 fw-bold">💾 Update Car</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
