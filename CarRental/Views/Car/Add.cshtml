@model CarRental.ViewModels.CarViewModel
@{
    ViewData["Title"] = "Add Car";
}

<h2 class="text-center mb-4">🚗 Add Car</h2>

<form method="post" enctype="multipart/form-data" id="carForm"
      class="p-4 rounded shadow" style="background-color: #1e1e2f; color: white; max-width: 650px; margin: auto;">

    <div class="mb-3">
        <label asp-for="CarBrand" class="form-label">Brand</label>
        <input asp-for="CarBrand" class="form-control bg-dark text-white" />
    </div>

    <div class="mb-3">
        <label asp-for="CarModel" class="form-label">Model</label>
        <input asp-for="CarModel" class="form-control bg-dark text-white" />
    </div>

    <div class="mb-3">
        <label asp-for="CarColour" class="form-label">Colour</label>
        <input asp-for="CarColour" class="form-control bg-dark text-white" />
    </div>

    <div class="mb-3">
        <label asp-for="PricePerDay" class="form-label">Price per Day</label>
        <input asp-for="PricePerDay" class="form-control bg-dark text-white" />
    </div>

    <div class="form-check form-switch mb-3">
        <input asp-for="Status" class="form-check-input" />
        <label asp-for="Status" class="form-check-label">Available</label>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control bg-dark text-white"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="ImageFiles" class="form-label">Upload Images</label>
        <input asp-for="ImageFiles" type="file" class="form-control bg-dark text-white" multiple />
    </div>

    <button type="submit" class="btn btn-outline-light w-100 fw-bold" id="submitBtn">
        💾 Save Car
    </button>
</form>

@section Scripts {
    <script>
        document.getElementById("carForm").addEventListener("submit", function () {
            document.getElementById("submitBtn").disabled = true;
            document.getElementById("submitBtn").innerText = "⏳ Saving...";
        });
    </script>
}
