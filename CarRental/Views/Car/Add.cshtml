@model CarRental.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Add New Car";
}

<h2 class="text-center mb-4">🚗 Add Car</h2>

<form asp-action="Add" method="post" enctype="multipart/form-data" class="p-4 rounded shadow"
      style="background-color: #1e1e2f; color: #fff; max-width: 600px; margin: auto;">

    <div class="mb-3">
        <label asp-for="CarBrand" class="form-label">Brand</label>
        <input asp-for="CarBrand" class="form-control bg-dark text-white" />
        <span asp-validation-for="CarBrand" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CarModel" class="form-label">Model</label>
        <input asp-for="CarModel" class="form-control bg-dark text-white" />
        <span asp-validation-for="CarModel" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CarColour" class="form-label">Colour</label>
        <input asp-for="CarColour" class="form-control bg-dark text-white" />
        <span asp-validation-for="CarColour" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PricePerDay" class="form-label">Price per Day</label>
        <input asp-for="PricePerDay" class="form-control bg-dark text-white" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>

    <div class="form-check form-switch mb-3">
        <input asp-for="Status" class="form-check-input" />
        <label asp-for="Status" class="form-check-label">Available?</label>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control bg-dark text-white" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageFiles" class="form-label">Upload Car Images (Multiple)</label>
        <input asp-for="ImageFiles" class="form-control bg-dark text-white" type="file" multiple />
        <span asp-validation-for="ImageFiles" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-light w-100 fw-bold">💾 Save Car</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
