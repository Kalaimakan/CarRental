        :root {
            --primary-red: #ff0000;
            --dark-red: #cc0000;
            --dark-bg: #121212;
            --light-text: #f8f9fa;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--dark-bg);
            color: var(--light-text);
        }

        .content-container {
            padding: 20px;
            margin-top: 60px;
        }

        .card {
            background-color: var(--dark-bg);
            border: 1px solid var(--primary-red);
            border-radius: 10px;
            color: var(--light-text);
            transition: all 0.3s ease;
            overflow: hidden;
            position: relative;
            box-shadow: 0 0 5px 5px rgba(255, 0, 0, 0.3);
        }

        

        .card:hover {
            transform: translateY(-10px);
            border-color: red;
            box-shadow: 0 0 20px 10px rgba(255, 0, 0, 0.7);
        }

        .card-img-top {
            height: 180px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .card:hover .card-img-top {
            transform: scale(1.05);
        }

        .card-body {
            position: relative;
            z-index: 1;
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient( to bottom, rgba(255, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.8) 70% );
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .card:hover::before {
            opacity: 1;
        }

        .btn-primary {
            background-color: var(--primary-red);
            border: none;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
